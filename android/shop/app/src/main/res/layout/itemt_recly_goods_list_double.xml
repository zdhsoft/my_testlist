<?xml version="1.0" encoding="utf-8"?>

<com.fxc.roundcornerlayout.RoundCornerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:roundedCornerRadius="5dp"
    app:roundTopRight="true"
    app:roundTopLeft="true"
    app:roundBottomLeft="true"
    app:roundBottomRight="true"
    android:layout_marginTop="9dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="167dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/bg_live_mannger"
            android:scaleType="centerCrop"
            android:id="@+id/img_goods_cover"
            />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Canon/佳能  PowerShot G7X 王者归来  正品行货全国联保,Canon/佳能  PowerShot G7X 王者归来  正品行货全国联保"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_15"
            android:id="@+id/tv_title"
            android:maxLines="2"
            android:gravity="center_vertical"
            android:minHeight="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_goods_cover"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="¥ 6899.00"
            android:textColor="#ffff4343"
            android:textSize="@dimen/text_size_12"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            android:layout_marginTop="@dimen/default_margin"
            android:id="@+id/tv_price"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="已售88件"
            android:textColor="@color/gray1"
            android:textSize="@dimen/text_size_13"
            app:layout_constraintRight_toRightOf="@id/tv_title"
            app:layout_constraintTop_toTopOf="@+id/tv_price"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/tv_sale_num"
            android:layout_marginBottom="13dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.fxc.roundcornerlayout.RoundCornerFrameLayout>
