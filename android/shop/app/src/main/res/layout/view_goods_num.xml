<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="@dimen/num_view_width"
android:layout_height="@dimen/num_view_height"
android:orientation="horizontal"
app:layout_constraintLeft_toLeftOf="parent"
app:layout_constraintTop_toBottomOf="@id/tv_num_tip"
android:focusableInTouchMode="true"
android:focusable="true"
>
<TextView
    android:layout_width="40dp"
    android:layout_height="match_parent"
    android:text="-"
    android:gravity="center"
    android:textSize="@dimen/text_size_13"
    android:textColor="@color/gray1"
    android:textStyle="bold"
    android:background="@drawable/bg_button_reduce"
    android:id="@+id/btn_goods_reduce"
    />

<EditText
    android:layout_width="40dp"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg_button_goods_num"
    android:textSize="@dimen/text_size_13"
    android:textColor="@color/textColor"
    android:textStyle="bold"
    android:text="1"
    android:inputType="number"
    android:id="@+id/tv_goods_num"
    />

<TextView
    android:layout_width="40dp"
    android:layout_height="match_parent"
    android:text="+"
    android:gravity="center"
    android:textSize="@dimen/text_size_13"
    android:textColor="@color/gray1"
    android:textStyle="bold"
    android:background="@drawable/bg_button_add"
    android:id="@+id/btn_goods_add"
    />
</LinearLayout>