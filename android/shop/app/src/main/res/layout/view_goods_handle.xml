<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/default_padding"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:elevation="3dp"
    android:layout_marginTop="1dp"
    android:paddingRight="@dimen/default_padding"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:padding="7dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_shop_cart"
            android:src="@drawable/icon_customer_service"
            android:id="@+id/img_customer_service"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_service"
            app:layout_constraintLeft_toLeftOf="@id/img_customer_service"
            app:layout_constraintRight_toRightOf="@id/img_customer_service"
            android:textColor="@color/textColor2"
            android:textSize="@dimen/text_size_10"
            android:id="@+id/tv__customer_service"
            app:layout_constraintTop_toBottomOf="@+id/img_customer_service"
            />

        <com.wanyue.common.custom.CheckImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:padding="7dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_collect"
            app:deault_image="@drawable/icon_goods_collect_default"
            app:select_image="@drawable/icon_goods_collect_select"
            android:id="@+id/img_collect"
            app:layout_constraintLeft_toRightOf="@+id/img_customer_service"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/collect"
            app:layout_constraintLeft_toLeftOf="@id/img_collect"
            app:layout_constraintRight_toRightOf="@id/img_collect"
            android:textColor="@color/textColor2"
            android:textSize="@dimen/text_size_10"
            android:id="@+id/tv_collect"
            app:layout_constraintTop_toBottomOf="@+id/img_collect"
            />

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:padding="7dp"
            app:layout_constraintLeft_toRightOf="@id/img_collect"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_shop_cart"
            android:src="@drawable/icon_shop_cart"
            android:id="@+id/img_shop_cart"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shop_cart"
            android:textColor="@color/textColor2"
            android:textSize="@dimen/text_size_10"
            android:id="@+id/tv_shop_cart"
            app:layout_constraintTop_toBottomOf="@+id/img_shop_cart"
            app:layout_constraintLeft_toLeftOf="@id/img_shop_cart"
            app:layout_constraintRight_toRightOf="@id/img_shop_cart"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_red"
            android:minWidth="10dp"
            android:minHeight="10dp"
            app:layout_constraintRight_toRightOf="@+id/img_shop_cart"
            app:layout_constraintTop_toTopOf="@+id/img_shop_cart"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:id="@+id/tv_red_point"
            android:textSize="@dimen/text_size_6"
            tools:text="123"
            android:visibility="invisible"
            android:textColor="@color/white"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:text="@string/add_shop_cart"
        android:gravity="center"
        android:background="@drawable/bg_gradient_add_shop_cart"
        android:id="@+id/btn_add_shop"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/white"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:text="@string/buy_now"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/btn_buy"
        android:background="@drawable/bg_gradient_buy"
        android:textSize="@dimen/text_size_13"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        />


</LinearLayout>